@using ForeverBloom.WebUI.RazorPages.Helpers
@using ForeverBloom.WebUI.RazorPages.Settings
@using Microsoft.Extensions.Options
@model ForeverBloom.WebUI.RazorPages.PageModels.BasePageModel
@inject IWebHostEnvironment Environment
@inject IOptions<GoogleAnalyticsSettings> GoogleAnalyticsOptions

@{
    var googleAnalyticsSettings = GoogleAnalyticsOptions.Value;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @if (!string.IsNullOrWhiteSpace(Model.PageTitle))
    {
        <title>@Model.PageTitle.Truncate(40) | Forever Bloom Studio</title>
    }
    else
    {
        <title>Forever Bloom Studio</title>
    }
    @if (!string.IsNullOrWhiteSpace(Model.PageDescription))
    {
        <meta name="description" content="@Model.PageDescription.Truncate(150)" />
    }
    else
    {
        <meta name="description" content="Forever Bloom Studio - Kwiaty zatrzymane w czasie" />
    }

    <!-- Send a noindex signal to crawlers on non-production environments -->
    @if (!Environment.IsProduction())
    {
        <meta name="robots" content="noindex,nofollow" />
    }

    <!-- Icon -->
    <link rel="icon" type="image/avif" sizes="512x512" href="/images/assets/thumbnail-512.avif">
    <link rel="icon" type="image/png" sizes="512x512" href="/images/assets/thumbnail-512.png">
    <link rel="shortcut icon" type="image/x-icon" href="/images/assets/favicon.ico">

    <!-- Google Fonts: Playfair Display (Headings) & Lato (Body) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">

    <!-- Bootstrap & Custom CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ForeverBloom.WebUI.RazorPages.styles.css" />

    <!-- Font Awesome for Icons (Optional, but recommended for social icons) -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <!-- Cookie Consent -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/orestbida/cookieconsent@3.1.0/dist/cookieconsent.css">
</head>

@if (googleAnalyticsSettings.Enabled)
{
    <!-- Setup Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=@googleAnalyticsSettings.TrackingId"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('consent', 'default', {
          'analytics_storage': 'denied'
        });

        gtag('config', '@googleAnalyticsSettings.TrackingId');
    </script>
    <script>
        window.googleAnalyticsSettings = {
            trackingId: '@googleAnalyticsSettings.TrackingId'
        };
    </script>
}

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom fixed-top" aria-label="Główna nawigacja">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">Forever Bloom Studio</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Przełącz nawigację">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/About">O nas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Catalog">Katalog</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/BouquetCare">Konserwacja bukietów okolicznościowych</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contact">Kontakt</a>
                        </li>
                    </ul>

                    <!-- Social icons (uses classes styled in site.css) -->
                    <div class="d-none d-lg-flex align-items-center social-icons">
                        <a href="https://www.facebook.com/people/Forever-Bloom-Studio/61578874588233/" class="facebook" target="_blank" rel="noopener" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://instagram.com/foreverbloomstudio_" class="instagram" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>

                    <!-- Mobile social icons inside menu -->
                    <div class="d-lg-none mt-3 social-icons-mobile">
                        <a href="https://www.facebook.com/people/Forever-Bloom-Studio/61578874588233/" class="facebook" target="_blank" rel="noopener" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="https://instagram.com/foreverbloomstudio_" class="instagram" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <footer class="border-top py-4 mt-auto">
        <div class="container">
            <div class="row gy-3 align-items-center">
                <div class="col-12 col-md-4 text-center text-md-start">
                    <a class="navbar-brand fw-bold" asp-page="/Index">Forever Bloom Studio</a>
                </div>
                <div class="col-12 col-md-4">
                    <ul class="nav justify-content-center">
                        <li class="nav-item"><a class="nav-link px-2" asp-page="/About">O nas</a></li>
                        <li class="nav-item"><a class="nav-link px-2" asp-page="/Catalog">Katalog</a></li>
                        <li class="nav-item"><a class="nav-link px-2" asp-page="/Contact">Kontakt</a></li>
                        <li class="nav-item"><a class="nav-link px-2" asp-page="/Privacy">Polityka prywatności</a></li>
                        <li class="nav-item">
                            <a class="nav-link px-2" href="#" onclick="CookieConsent.showPreferences(); return false;">Zarządzaj plikami cookie</a>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-md-4 text-center text-md-end social-icons-footer">
                    <a href="https://www.facebook.com/people/Forever-Bloom-Studio/61578874588233/" class="facebook" target="_blank" rel="noopener" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://instagram.com/foreverbloomstudio_" class="instagram" target="_blank" rel="noopener" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="text-center pt-3 small text-muted">&copy; 2025 Forever Bloom Studio</div>
        </div>
    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script type="module" src="~/js/cookieconsent-config.js"></script>
</body>
</html>
